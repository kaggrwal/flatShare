<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#020202" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>
    <item android:state_selected="true" >
        <shape>
            <solid
                android:color="#020202" />
            <stroke
                android:width="1dp"
                android:color="#020202" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#020202"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#020202" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>

</selector>